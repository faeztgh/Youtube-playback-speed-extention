{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "types": ["chrome", "node"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src", "vite-env.d.ts", "popup.html", "options.html"],
  "exclude": ["dist", "node_modules"]
} 