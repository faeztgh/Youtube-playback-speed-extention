{
    "name": "yt-playback-controller",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "concurrently -n content,app -c blue,green \"cross-env BUILD_TARGET=content vite build --watch\" \"cross-env BUILD_TARGET=app vite build --watch\"",
        "build": "pnpm clean && pnpm build:app && pnpm build:content",
        "build:content": "cross-env BUILD_TARGET=content vite build",
        "build:app": "cross-env BUILD_TARGET=app vite build",
        "clean": "rimraf dist",
        "icons": "node scripts/generate-icons.js",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.1.1",
        "lucide-react": "^0.552.0"
    },
    "devDependencies": {
        "@types/chrome": "^0.1.29",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.1.0",
        "rimraf": "^6.1.0",
        "sharp": "^0.34.5",
        "typescript": "^5.9.3",
        "vite": "^7.1.12",
        "tailwindcss": "^4.1.17",
        "postcss": "^8.4.47",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.39.1",
        "@eslint/js": "^9.39.1",
        "@typescript-eslint/parser": "^8.46.3",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "eslint-plugin-react": "^7.34.3",
        "eslint-plugin-react-hooks": "^7.0.1",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "@types/node": "24.10.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    }
}

